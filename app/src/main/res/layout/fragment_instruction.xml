<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragmentinstructiondesign"
    tools:context=".FragmentInstruction">

   <TextView
       android:id="@+id/textViewCustomerFragment"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/descriptionChoiseUser"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginTop="20dp"
       android:textSize="20sp"
       android:textStyle="bold"
       android:layout_marginLeft="10dp"
       />

   <TextView
       android:id="@+id/textViewProviderFragment"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/textViewCustomerFragment"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginLeft="10dp"
       android:text="@string/textViewProviderFragment"
       android:textSize="20sp"
       android:textStyle="bold"
       />

   <ImageView
       android:id="@+id/imageViewClose"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginRight="6dp"
       android:layout_marginTop="10dp"
       android:src="@drawable/ic_baseline_close"
       />
</androidx.constraintlayout.widget.ConstraintLayout>