<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="View.ViewChat.MainMenu.FragmentMainMenu">

    <ImageView
        android:id="@+id/imageViewNewApp"
        android:layout_width="270dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        android:background="@drawable/customchatdesign"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageViewNewApp"
        app:layout_constraintBottom_toBottomOf="@id/imageViewNewApp"
        app:layout_constraintLeft_toLeftOf="@id/imageViewNewApp"
        app:layout_constraintRight_toRightOf="@id/imageViewNewApp"
        android:text="Новые заявки"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/imageViewChat"
        android:layout_width="270dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewNewApp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/customchatdesign"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageViewChat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageViewChat"
        android:text="Чат"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageViewSetting"
        android:layout_width="270dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewChat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/customchatdesign"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageViewSetting"
        app:layout_constraintLeft_toLeftOf="@id/imageViewSetting"
        app:layout_constraintRight_toRightOf="@id/imageViewSetting"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSetting"
        android:text="Настройки"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/createNewApp"
        android:layout_width="270dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/customchatdesign"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать заявку"
        app:layout_constraintTop_toTopOf="@id/createNewApp"
        app:layout_constraintBottom_toBottomOf="@id/createNewApp"
        app:layout_constraintLeft_toLeftOf="@id/createNewApp"
        app:layout_constraintRight_toRightOf="@id/createNewApp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>