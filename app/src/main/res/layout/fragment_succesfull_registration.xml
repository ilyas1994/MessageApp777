<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="View.ViewChat.ViewSuccesfullRegistration.FragmentSuccesfullRegistration">

    <TextView
        android:id="@+id/textViewSuccesfullRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поздравляем, Вы успешно зарегистрированы"
        app:layout_constraintBottom_toTopOf="@id/buttonSuccesfullRegistration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/buttonSuccesfullRegistration"
        android:layout_width="210dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Продолжить"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/customchatdesign"
        />

</androidx.constraintlayout.widget.ConstraintLayout>