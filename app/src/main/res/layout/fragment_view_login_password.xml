<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="View.ViewChat.Register.ForSupplier.ViewFragmentLoginPassword">


    <EditText
        android:id="@+id/editTextEnterTelefor"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Введите свой телефон"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/register_for_supplier_design_true_filed"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:maxLength="11"
        />

    <EditText
        android:id="@+id/editTextEnterPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/editTextEnterTelefor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:hint="Придумайте пароль"
        android:inputType="textPassword"
        android:background="@drawable/register_for_supplier_design_true_filed"
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/buttonSaveLoginPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextEnterPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Сохранить"
        android:background="@drawable/register_for_supplier_design_true_filed"
        />



</androidx.constraintlayout.widget.ConstraintLayout>