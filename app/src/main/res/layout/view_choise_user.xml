<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.example.messageapp.mvvm.choiseUser.ViewModelChoiseUser" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvvm.choiseUser.ViewChoiseUser">

    <ImageView
        android:id="@+id/imageSupplier"
        android:onClick="@{() -> ViewModel.buttonClickSupplier()}"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="@drawable/viewcustomerdesign"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/textViewCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заказчик"
        android:fontFamily="@font/exo_light"
        app:layout_constraintTop_toTopOf="@id/imageSupplier"
        app:layout_constraintLeft_toLeftOf="@id/imageSupplier"
        app:layout_constraintRight_toRightOf="@id/imageSupplier"
        app:layout_constraintBottom_toBottomOf="@id/imageSupplier"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/imageViewProvider"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:onClick="@{() -> ViewModel.buttonClickCustomer()}"
        android:background="@drawable/viewproviderdesign"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageSupplier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/textViewProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поставщик"
        android:fontFamily="@font/exo_light"
        app:layout_constraintTop_toTopOf="@id/imageViewProvider"
        app:layout_constraintBottom_toBottomOf="@id/imageViewProvider"
        app:layout_constraintLeft_toLeftOf="@id/imageViewProvider"
        app:layout_constraintRight_toRightOf="@id/imageViewProvider"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


</layout>
