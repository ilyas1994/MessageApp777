<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="ViewModel"
            type="com.example.messageapp.mvvm.completionOfRegistration.ViewModelCompleteOfRegistration" />

    </data>




<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvvm.completionOfRegistration.ViewCompletionOfRegistration">


    <TextView
        android:id="@+id/tvTextInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пример: ТЦ Ялян, Северное Кольцо 9/4, ряд 3 место 99"
        app:layout_constraintTop_toBottomOf="@id/editAdress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/editAdress"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/register_for_supplier_design_true_filed"
        android:hint="Ваш адрес"
        android:paddingLeft="10dp"
        android:text="@={ViewModel.adress}"
        />

    <EditText
        android:id="@+id/editTelefonNumber"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTextInfo"
        android:background="@drawable/register_for_supplier_design_true_filed"
        android:hint="@string/_87050000000"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:maxLength="17"
        android:text="@={ViewModel.phoneNum}"
        />

    <Button
        android:id="@+id/buttonCompleteRegistration"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTelefonNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/register_for_supplier_design_true_filed"
        android:text="Завершить регистрацию"
        android:onClick="@{() -> ViewModel.save()}"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
